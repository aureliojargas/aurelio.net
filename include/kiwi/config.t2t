%!postproc: '^<H3>/(.*?)</H3>$'	'<H3><a href="/">aurelio.net</a> / <a href="/\1">\1</a></H3>'

% Compose menu icons (sidebar.t2t)
%!postproc: @i@([A-Z0-9_]+)	'<A\n\n HREF="_\1_URL"\nTITLE="_\1_NAME"><IMG BORDER="0"\n  ALT="_\1_NAME"\n  SRC="SITEROOT/img/icon/32/_\1_ID.jpg"></A>'

% Sidebar link descriptions
%!postproc: '(<A) (HREF="/">)'	'\1 title="Voltar ao início do site" \2'
